schema {
    query: Query   
    mutation: Mutation
}

type Query {
      departments: [Department!]!  
      employees: [Employee]!  
      employeesByFilter(filter: EmployeeFilter):[Employee]!
}

type Mutation {
    updateEmployee( input:EmployeeInput ): Employee  
}

type Department{
  departmentId: Int!
  departmentName: String!
  employees: [Employee]
  managerId: Int
  locationId: Int
}


type Employee{
  employeeId: Int!
  firstName: String!
  lastName: String!
  email: String!
  departmentId: Int
}

input EmployeeFilter{
   firstName: String
   lastName: String
   departmentId: Int
}


input EmployeeInput{
  employeeId: Int!
  firstName: String
  lastName: String
  email: String
  departmentId: Int
}
